<Window x:Class="Lampman.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lampman Installer" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Welcome to Lampman Installer" 
                       FontSize="22" FontWeight="Bold" Margin="0 0 0 15"/>
            <TextBlock Text="Select installation folder:"/>
            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBox x:Name="txtInstallPath" Width="400" Text="C:\Lampman"/>
                <Button Content="Browse" Margin="5 0" Click="Browse_Click"/>
            </StackPanel>

            <CheckBox x:Name="chkAddToPath" Content="Add Lampman to system PATH" IsChecked="True" Margin="0 10"/>
            <CheckBox x:Name="chkRunAfter" Content="Run Lampman after installation" Margin="0 0 0 20"/>

            <ProgressBar x:Name="progressBar" Height="20" Visibility="Collapsed" Margin="0 0 0 20"/>
            <Button x:Name="btnInstall" Content="Install" Width="120" Height="35" Click="Install_Click"/>
        </StackPanel>
    </Grid>
</Window>
